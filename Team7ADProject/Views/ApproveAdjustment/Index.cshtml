@using Team7ADProject.Entities
@model  List<StockAdjustment>

@{
    ViewBag.Title = "View Adjustment Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Pending Stock Adjustment Requests</h4>


@using (Html.BeginForm("AdjDetails", "ApproveAdjustment"))
{
    <div class="container">
        <div class="row">
            <div>
                <table class="table table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>Date</th>

                            <th>StockAdjustmentID</th>

                            <th>Requested By</th>

                            <th>Status</th>

                        </tr>

                    </thead>
                    <tbody>

                        @if (ViewBag.error != null)
                        {
                            <tr>
                                <td colspan="4" align="center"> @ViewBag.error </td>
                            </tr>
                        }

                        else
                        {
                            foreach (var adj in Model)
                            {
                                <tr>

                                    <td>@Html.Label(adj.Date.ToShortDateString())</td>

                                    <td>@adj.StockAdjId</td>

                                    <td>@adj.AspNetUsers1.EmployeeName</td>

                                    <td>@Html.ActionLink("Pending", "AdjDetails", new { stockAdjId = adj.StockAdjId }) </td>
                                </tr>
                            }
                        }


                    </tbody>
                </table>

            </div>
        </div>
    </div>
}

