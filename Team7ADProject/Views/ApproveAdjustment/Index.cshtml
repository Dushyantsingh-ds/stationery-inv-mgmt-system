@using Team7ADProject.Entities
@model  List<StockAdjustment>

@{
    ViewBag.Title = "View Adjustment Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <link href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="css/core.css">
</head>

<!------ Include the above in your HEAD tag ---------->
@using (Html.BeginForm("AdjDetails", "ApproveAdjustment"))
{
    <div class="container">
        <div class="row">
            <div>
                <table class="table table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>StockAdjustmentID</th>

                            <th>Requested By</th>

                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var adj in Model)
                        {
                            <tr>

                                <td>@Html.Label(adj.Date.ToShortDateString())</td>

                                <td>@adj.StockAdjId</td>

                                <td>@adj.AspNetUsers1.EmployeeName</td>

                                <td>@Html.ActionLink("Details", "AdjDetails", new { stockAdjId = adj.StockAdjId }) </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
}

