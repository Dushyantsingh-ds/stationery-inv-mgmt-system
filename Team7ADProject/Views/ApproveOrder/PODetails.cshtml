@model Team7ADProject.ViewModels.PoDetailsViewModel
@using Team7ADProject.Entities
@{
    ViewBag.Title = "PODetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>

<!------ Include the above in your HEAD tag ---------->
@using (Html.BeginForm("ApproveOrReject", "ApproveOrder"))
{
    <div class="container">
        <div class="row">
            <div class="span5">
                @Html.LabelFor(m => m.PurchaseOrder.PONo )
                @Html.LabelFor(m => m.PurchaseOrder.Supplier.SupplierName)
                @Html.LabelFor(m => m.PurchaseOrder.Date)
                <table class="table table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>Item No</th>
                            <th>Description</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var po in Model.PODetails)
                        {
                            <tr>
                                <td>@po.ItemId</td>
                                <td>@po.Stationery.Description</td>
                                <td>@po.Quantity</td>
                                <td>@po.Stationery.FirstSuppPrice</td>
                                <td>@po.Quantity</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
}

