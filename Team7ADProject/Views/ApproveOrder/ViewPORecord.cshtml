@using Team7ADProject.Entities
@model  List<PurchaseOrder>

@{
    ViewBag.Title = "ViewPORecord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>

<!------ Include the above in your HEAD tag ---------->
@using (Html.BeginForm("PODetails", "ApproveOrder"))
{
    <div class="container">
        <div class="row">
            <div class="span5">
                <table class="table table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>PO Number</th>
                            <th>Supplier</th>
                            <th>Ordered By</th>
                            <th>Amount</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var po in Model)
                        {
                            <tr>
                                <td>@po.Date</td>
                                <td>@po.PONo</td>
                                <td>@po.Supplier.SupplierName</td>
                                <td>@po.AspNetUsers1.EmployeeName</td>
                                <td>@po.Amount</td>
                                <td><button type="submit">@po.Status</button></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
}

