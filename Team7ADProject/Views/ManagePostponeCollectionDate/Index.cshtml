@model  IEnumerable<Team7ADProject.ViewModels.PostponeCollDateViewModel>

@{
    ViewBag.Title = "Postpone Collection Date";
}

@*Author:Lynn Lynn Oo*@
<head>
    <script type="text/javascript">
        $(function () {
          
            $('.date-picker').datepicker({
                dateFormat: 'yy-mm-dd',
                showAnim: 'clip',
                onSelect: function (date) {
                    $('.date-picker1').datepicker("option", "disabled", false);
                    $(".date-picker1").datepicker("option", "minDate", date);
                    $(".date-picker1").datepicker("option", "maxDate", '+2y');
                    $('.date-picker1').datepicker('setDate', date);
                }

            });
            $(".date-picker").datepicker("option", { minDate: + 0 });
            // $(".date-picker").datepicker('setDate', 'today');

            $(".date-picker1").datepicker({
                dateFormat: 'yy-mm-dd',
                showAnim: 'clip',
                disabled: true

            });


        })

    </script>
</head>
<div class="container">
    <center><h1><b>Postpone Collection Date</b></h1></center>
    @* Design *@
    <style>
        table {
            border-collapse: collapse;
            width: 80%;
        }

        td, th {
            border: 1px solid #000000;
            text-align: center;
            padding: 10px;
        }
    </style>
    @*Design*@
    <br />


    <table class="table breadcrumb table-bordered">
        <col style="width:8%">
        <col style="width:10%">
        <col style="width:10%">
        <col style="width:8%">
        <col style="width:10%">
        <col style="width:10%">
        <tr>
            <th>No.</th>
            <th>Request By</th>
            <th>Request ID</th>
            <th>Details</th>
            <th>Collection Date</th>
            <th>Postpone</th>
        </tr>

        @{ int i = 1;}
        @foreach (var item in Model)
        {
            <tr>


                <td>@(i++)</td>
                <td>
                    @item.RequestBy
                </td>
                <td>
                    @item.RequestID
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.RequestID })
                </td>
                <td>
                    @item.CollectionDate    
                </td>

                <td>
                    @using (Html.BeginForm("Postpone", "Postpone", FormMethod.Get))
                    {
                        <button type="submit"
                                width="5"
                                class="btn btn-primary"
                                title="Action description">
                            POSTPONE
                        </button>
                    }
                </td>
            </tr>
        }

    </table>
</div>
    

