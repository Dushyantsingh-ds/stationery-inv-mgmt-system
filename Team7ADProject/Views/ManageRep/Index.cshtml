@model Team7ADProject.ViewModels.ManageRepViewModel

@{
    ViewBag.Title = "Index";
}

<div class="custcontainer">
    <h2>Assign Rep</h2>



    @using (Html.BeginForm("ManageRep", "ManageRep", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <h4>Manage Rep</h4>
        <hr />
        <br />
        <div>Current Representative: @ViewBag.empRep</div>
        <br />
        @Html.DropDownListFor(m => m.UserId, Model.UserList, "Select employee")
        @Html.ValidationMessageFor(model => model.UserList, "", new { @class = "text-danger" })

        <br />
        <br />
        <div>
            <input type="submit" value="Assign" class="greenBtn pull-right" />
        </div>
    }
</div>

<script type="text/javascript">
    $('form').submit(function(e) {
        var currentForm = this;
        e.preventDefault();
        bootbox.confirm({
            message: "Are you sure",
            size: 'small',
            buttons: {
                confirm: {
                    label: 'Yes',
                    className: 'btn-success'
                },
                cancel: {
                    label: 'No',
                    className: 'btn-danger'
                }
            },
            callback: function (result) {
                currentForm.submit();
            }
        });
    });
</script>