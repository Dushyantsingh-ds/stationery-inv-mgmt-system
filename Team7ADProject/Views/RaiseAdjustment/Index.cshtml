@model Team7ADProject.ViewModels.AdjustmentViewModel
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Stock Adjustment</h2>
    <div> 
        <table class="table">
            <tr>
                <th>
                    Category
                </th>
                <th>
                    Item Description
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Current Stock
                </th>
                <th>
                    Amount
                </th>
            </tr>

            <tr>
                <td>
                    @Html.DropDownList(Team7ADProject.ViewModels.AdjustmentViewModel.Items.FirstOrDefault().Category,
                   new SelectList(Team7ADProject.ViewModels.AdjustmentViewModel.Items.Select(x => x.Category).Distinct()),
                   "Select Category"  )
                </td>
                <td>
                    @Html.DropDownList(Team7ADProject.ViewModels.AdjustmentViewModel.Items.FirstOrDefault().ItemId,
                   new SelectList(Team7ADProject.ViewModels.AdjustmentViewModel.Items,"ItemId","description"),
                   "Select Item"  )
                </td>
                <td>
                    @Html.
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
