@model Team7ADProject.ViewModels.AdjustmentViewModel
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Stock Adjustment</h2>
    <div> 
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName(Team7ADProject.ViewModels.AdjustmentViewModel.Items.FirstOrDefault().Category)
                </th>
                <th>
                    @Html.DisplayName(Team7ADProject.ViewModels.AdjustmentViewModel.Items.FirstOrDefault().Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model=>model.Detail.FirstOrDefault().Quantity)
                </th>
                <th>
                    @Html.DisplayName(Team7ADProject.ViewModels.AdjustmentViewModel.Items.FirstOrDefault().QuantityWarehouse.ToString())
                </th>
                <th>
                    Amount
                </th>
            </tr>

            <tr>
                <td>
                    @Html.DropDownList(Team7ADProject.ViewModels.AdjustmentViewModel.Items.FirstOrDefault().Category,
                   new SelectList(Team7ADProject.ViewModels.AdjustmentViewModel.Items.Select(x => x.Category).Distinct(),"category","category"), 
                   "Select Category"  )
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
