@model IEnumerable<Team7ADProject.ViewModels.RaisePOViewModel>

@{
    ViewBag.Title = "RaisePO";
}

<h2>View</h2>

<p>
    @Html.ActionLink("Raise PO", "Index")
</p>
<p>
    Ordered By : @ViewBag.UserName
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PONo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SupplierId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PONo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierId)
            </td>
            <td>
                SGD - @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @{string para = item.Date.ToString("MM/dd/yyyy");}
                @Html.DisplayFor(modelItem => para)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { poNo = item.PONo })
            </td>
        </tr>
    }



</table>