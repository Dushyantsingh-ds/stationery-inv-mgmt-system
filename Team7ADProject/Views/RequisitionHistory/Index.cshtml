@model IEnumerable<Team7ADProject.ViewModels.OwnRequisitionHistoryViewModel>

@{
    ViewBag.Title = "Own Requisition History";
}

@*Author:Lynn Lynn Oo*@


<div class="container">

    <center><h2><b>Own Requisition History</b></h2></center>
    <br />

    <style>
    table {
        border-collapse: collapse;
        width: 80%;
    }

        td, th {
            border: 1px solid #ffffff;
            text-align: center;
            padding: 10px;
        }

    tr:nth-child(even) {
        background-color: #5b94d1;
    }
 </style>


    <table class="table table-bordered table-striped table-hover">


        <tr>
            <th>No.</th>
            <th>Item Description</th>
            <th>Quantity</th>
            <th>Unit of Measure</th>
            <th>Request Date</th>
            <th>Status</th>
        </tr>


        @{ int i = 1;}

        @foreach (var item in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@item.ItemDescription</td>
                <td>@item.ItemQuantity</td>
                <td>@item.UnitOfMeasure</td>
                <td>@item.RequestDate</td>
                <td>@item.Status</td>
            </tr>
        }

    </table>

    <table>
        <tr>
            <td>
                @Html.ActionLink("Back", "Index", "RequisitionHistory", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })
            </td>
        </tr>
    </table>
</div>
