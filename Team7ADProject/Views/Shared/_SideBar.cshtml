@model IEnumerable<Team7ADProject.ViewModels.SideBarViewModel>

<div class="sidebar">
    @foreach (var i in Model)

    {
        if (i.Roles == "All")
        {
            <a href="@Url.Action(i.Action,i.Controller)"> @Html.Raw(i.Title)</a>
        }

        if (User.IsInRole(i.Roles))
        {
            <a href="@Url.Action(i.Action,i.Controller)"> @Html.Raw(i.Title)</a>
        }
    }

</div>
